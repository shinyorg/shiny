<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sample="clr-namespace:Sample.BleClient"
    xmlns:bluetoothle="clr-namespace:Shiny.BluetoothLE;assembly=Shiny.BluetoothLE"
    x:DataType="sample:PeripheralViewModel"
    x:Class="Sample.BleClient.PeripheralPage"
    Title="{Binding Title}">

    <ContentPage.Content>
        <Grid RowDefinitions="Auto, *">
            <Button Text="Get Device Info"
                    Command="{Binding GetDeviceInfo}" />

            <CollectionView ItemsSource="{Binding Services}"
                            SelectedItem="{Binding SelectedService}"
                            SelectionMode="Single"
                            Grid.Row="1">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="bluetoothle:BleServiceInfo">
                        <VerticalStackLayout>
                            <Label Text="{Binding Uuid, StringFormat='Service: {0}'}"
                                   FontSize="Large" />

                            <BoxView Style="{StaticResource HR}" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>
