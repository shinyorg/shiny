<Project Sdk="MSBuild.Sdk.Extras">

    <PropertyGroup>
        <Description>Shiny addon for all your push notification needs</Description>
        <TargetFrameworks>netstandard2.0;xamarin.ios10;monoandroid10.0</TargetFrameworks>
        <TargetFrameworks Condition=" $(OS) == 'WINDOWS_NT' ">uap10.0.16299;$(TargetFrameworks)</TargetFrameworks>
    </PropertyGroup>

    <ItemGroup>
        <None Include="readme.txt" pack="true" PackagePath="." />
        <Compile Remove="Platforms\**\*.cs" />
        <None Include="Platforms\**\*.cs" />
        <ProjectReference Include="..\Shiny.Push.Abstractions\Shiny.Push.Abstractions.csproj" />
        <ProjectReference Include="..\Shiny.Notifications.Abstractions\Shiny.Notifications.Abstractions.csproj" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('netstandard')) ">
        <ProjectReference Include="..\Shiny.Notifications\Shiny.Notifications.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('uap')) ">
        <ProjectReference Include="..\Shiny.Notifications\Shiny.Notifications.csproj" />
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
        <Compile Include="Platforms\Uwp\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('xamarin.ios')) ">
        <ProjectReference Include="..\Shiny.Notifications\Shiny.Notifications.csproj" />
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
        <Compile Include="Platforms\iOS\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('xamarin.mac')) ">
        <ProjectReference Include="..\Shiny.Notifications\Shiny.Notifications.csproj" />
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
        <Compile Include="Platforms\macOS\**\*.cs" />
        <Reference Include="netstandard" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('xamarin.tvos')) ">
        <ProjectReference Include="..\Shiny.Notifications\Shiny.Notifications.csproj" />
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
        <Compile Include="Platforms\tvOS\**\*.cs" />
    </ItemGroup>

    <ItemGroup Condition=" $(TargetFramework.StartsWith('tizen')) ">
        <ProjectReference Include="..\Shiny.Notifications\Shiny.Notifications.csproj" />
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <Compile Include="Platforms\Shared\**\*.cs" />
        <Compile Include="Platforms\tizen\**\*.cs" />
    </ItemGroup>

    <!--
    <ItemGroup Condition=" $(TargetFramework.StartsWith('monoandroid9')) ">
        <ProjectReference Include="..\Shiny.Notifications\Shiny.Notifications.csproj" />
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <PackageReference Include="Xamarin.Firebase.Common" Version="[71.1610.1, 72)" />
        <PackageReference Include="Xamarin.Firebase.Messaging" Version="[71.1740.1, 72)" />
        <PackageReference Include="Xamarin.GooglePlayServices.Basement" Version="[71.1620.2, 72)" />
        <PackageReference Include="Xamarin.GooglePlayServices.Tasks" Version="[71.1601.1, 72)" />
        <Compile Include="Platforms\Shared\**\*.cs" />
        <Compile Include="Platforms\Android\**\*.cs" />
    </ItemGroup>
    -->

    <ItemGroup Condition=" $(TargetFramework.StartsWith('monoandroid10')) ">
        <ProjectReference Include="..\Shiny.Notifications\Shiny.Notifications.csproj" />
        <ProjectReference Include="..\Shiny.Core\Shiny.Core.csproj" />
        <PackageReference Include="Xamarin.Firebase.Datatransport" Version="117.0.5-preview02" />
        <PackageReference Include="Xamarin.Firebase.Common" Version="119.3.0-preview02" />
        <PackageReference Include="Xamarin.Firebase.Messaging" Version="120.1.7-preview02" />
        <PackageReference Include="Xamarin.GooglePlayServices.Basement" Version="117.2.1-preview02" />
        <PackageReference Include="Xamarin.GooglePlayServices.Tasks" Version="117.0.2-preview02" />
        <Compile Include="Platforms\Shared\**\*.cs" />
        <Compile Include="Platforms\Android\**\*.cs" />
    </ItemGroup>
</Project>