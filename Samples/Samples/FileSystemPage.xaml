<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.FileSystemPage"
             Title="File System">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="AppData" />
            <Label Text="{Binding AppData}" TextColor="Red" />

            <Label Text="Public" />
            <Label Text="{Binding Public}" TextColor="Red" />

            <Label Text="Cache" />
            <Label Text="{Binding Cache}" TextColor="Red" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>